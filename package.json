{
  "name": "@aberoth-community/mechagurun",
  "version": "1.0.0",
  "description": "A chat engagement bot for Aberoth!",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "vite-node --watch src/index.ts",
    "build": "vite build",
    "clean": "rimraf dist/",
    "fmt": "pnpm --parallel /^fmt:.*/",
    "fmt:prettier": "prettier -c --write \"**/*.{md,js,json,ts}\"",
    "fmt:prisma": "prisma format",
    "lint": "pnpm run /^lint:.*/",
    "lint:es": "eslint .",
    "lint:fmt": "prettier --list-different \"**/*.{md,js,json,ts}\"",
    "test": "vitest --run",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">= 18"
  },
  "engineStrict": true,
  "types": "src/types",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/aberoth-community/mechagurun.git"
  },
  "keywords": [
    "aberoth",
    "rpg",
    "discord-bot"
  ],
  "author": "ashnel3",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aberoth-community/mechagurun/issues"
  },
  "homepage": "https://github.com/aberoth-community/mechagurun#readme",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "cfonts": "^3.2.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "i18next": "^23.7.11",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "rimraf": "^5.0.5",
    "types-package-json": "^2.0.39",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-node": "^1.0.4",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^1.0.4"
  }
}
